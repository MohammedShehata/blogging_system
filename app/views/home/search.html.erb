<h5 class="text-error">Search for users</h5>
<%= form_tag result_path do %>
<input id="str" name="str" type="text" class="auto search-query text_field"/>
<%= submit_tag "search", :class => "btn btn-primary"%>
<% end %>

<% if @users %> <h4>Search Results</h4>
<table class="table table-hover">
	<% @users.each do |user|%>
	<tr>
		<td> <%= image_tag profile_pic(user), :class => "img-rounded"%> <span><%= link_to user.username, profile_path(user) %></span></td>
	</tr>
	<% end %>
</table>
<%= will_paginate @users, :style => 'color:blue' %>
<br/>
<%= page_entries_info @users %>
<% end %>
