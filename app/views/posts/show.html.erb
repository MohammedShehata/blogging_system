<br/>

<table>
	<tr>
		<td>Title</td>
		<td><%= @post.title %></td>
	</tr>
	<tr>
		<td>Published_at</td>
		<td><%= format_date @post %></td>
		<% if @post.published_at == nil and @post.user == current_user %>
		<td><%= link_to "<<<<<<<<<<< Publish", publish_path(@post) %></td>
		<% end %>
	</tr>
	<tr>
		<td>Content</td>
		<td><%= @post.content %></td>
	</tr>

</table>

<%= render :partial => "like_form" %>
<%= link_to "Back", posts_path %><br/>
<br/>

<%= render :partial => "comments/form" %>

<% if @post.user != current_user %>
<h3>Add Comment</h3>
<% form_for([@post, @post.comments.build]) do |f| %>
	<%= f.text_area :content %>
	<%= f.submit "Comment"%>
<% end %>
<% end %>

