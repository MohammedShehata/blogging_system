<% if posts_arr.length != 0 %>
<table class="table table-hover">
	<th>Title</th>
	<th>Content</th>
	<th>Date of Publish</th>
	<% posts_arr.each do |post| %>
	<tr>
		<td><%= format_utf_8(post.title) %>
		<%= "....." if post.title.length > 20%>
		</td>
		<td><%= format_utf_8(post.content) %>
			<%= "....." if post.content.length > 20 %>
		</td>
<!-- format_date is ahelper in posts_helper		 -->
		<td><%= format_date(post) %></td>
		<td><%= link_to "Show", post %></td>
	</tr>
	<%end%>
</table>
<% else %>
<h4><center>There isn't any Posts yet</center></h4>
<% end %>

<%= will_paginate paginator %><br/>
<%= page_entries_info paginator %><br/>
